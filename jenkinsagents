pipeline {
    agent any
    stages {
        stage('checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/AuthorizeNet/sample-code-java.git'
            }
        }
        stage('test') {
            steps {
                echo "running static test on code"
            }
        }
        stage('build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('deploy') {
            steps {
                sh 'rsync -r /home/ubuntu/jenkins/workspace/thirdjob/target/*.war /opt/tomcat/webapps/'
                
            }
        }
    }
}
