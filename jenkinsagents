pipeline {
    agent any
    stages {
        stage('checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/adibali/first-repo.git'
            }
        }
        stage('test') {
            steps {
                echo "running static test on code"
            }
        }
        stage('build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('deploy') {
            steps {
                sshagent(['deploy_user']) {
                    sh 'rsync var/lib/jenkins/workspace/thirdjob/target/*.war /home/ec2-user/tomcat/webapps'
                }
            }
        }
    }
}
