pipeline {
    agent any
    environment {
        name="adithya"
    }
      stages {
        stage('variables-toplevel') {
             environment{
                 place='bangalore'
             }
              steps {
                echo "Job ${env.JOB_NAME} IS RUNNING ON ${env.JENKINS_URL}AND HAVING BUILD NO:${env.BUILD_ID}"
                echo "name is :${name}"
                 echo "place is :${place}"
            }
        }
        stages {
        stage('variables-stagelevel') {
            steps {
                echo "Job ${env.JOB_NAME} IS RUNNING ON ${env.JENKINS_URL}AND HAVING BUILD NO:${env.BUILD_ID}"
                echo "name is :${name}"
                echo "place is :${place}"
            }
        }
    }
}
